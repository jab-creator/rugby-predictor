rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // MILESTONE 0: Basic emulator-friendly rules
    // TODO: Implement proper security rules per docs/SECURITY_RULES.md in Milestone 5
    
    // Allow all read/write during development (emulator-only)
    // This allows seeding and testing without authentication
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
